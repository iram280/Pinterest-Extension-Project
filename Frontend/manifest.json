{
  "manifest_version": 3,
  "name": "PinSift",
  "version": "1.0",
  "description": "Find your dream products based off your Pinterest boards!",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:5000/*", "http://localhost:3000/*"],
  "icons": {
    "16": "images/temp-pinsift-logo.png",
    "48": "images/temp-pinsift-logo.png",
    "128": "images/temp-pinsift-logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/temp-pinsift-logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
